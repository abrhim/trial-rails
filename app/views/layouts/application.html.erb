    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>


    <%= javascript_pack_tag 'application' %>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  </head>

  <body>
    
    <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 border-bottom shadow-sm ropebridge-nav">
       <a class="navbar-brand mr-md-auto my-0" href="#">
        <%= image_tag("/logo.png",  alt: "logo", width: 100) %>
      </a>
      <nav class="my-2 my-md-0 mr-md-3">
        <a class="p-2 text-blue nav-size" href="#">Home</a>
        <a class="p-2 blue-hover nav-size" href="/">Start an Adventure</a>
        <a class="p-2 blue-hover nav-size" href="#">Be a Local</a>
