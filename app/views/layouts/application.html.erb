      <%= yield %>
    </div>
        </div>

    
      <footer class="border-top" style="margin-top:15px; padding-top:14px">
        <div class="row">
          <div class="col-12 col-md text-center">
            <small class="d-block mb-3 text-muted">&copy;2018</small>
              <p>RopeBridge </p>
              <p>55-550 Naniloa Loop, Laie Hi</p>
          </div>
        </div>
